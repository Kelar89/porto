---
pagination:
  data: site.portfolio
  size: 1
  alias: project
permalink: "portfolio/{{ project.title | slug }}/"
layout: "base.njk"
---
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="text-accent">Portfolio-Details</h2>
        <h1 class="display-5 fw-bold">{{ project.title }}</h1>
    </div>

    <div class="portfolio-detail-card p-4 p-md-5">
        <div class="row mb-4">
            <div class="col-md-4">
                <strong>Client:</strong>
                <p>{{ project.client }}</p>
            </div>
            <div class="col-md-4">
                <strong>Date:</strong>
                <p>{{ project.date }}</p>
            </div>
            <div class="col-md-4">
                <strong>Project Link:</strong>
                <p><a href="{{ project.project_link }}" target="_blank" class="text-accent">clientwebsite.com</a></p>
            </div>
        </div>

        <p class="project-description">{{ project.description_long }}</p>

        <div class="mt-5">
            <img src="{{ project.image }}" class="img-fluid rounded" alt="{{ project.title }}">
        </div>
    </div>
</div>